{
  "trailingSlash": true,
  "redirects": [
    {
      "source": "/((?!.*\\.(json|js|css|png|jpg|jpeg|gif|svg|webp|ico|woff|woff2|ttf|eot|xml|txt|pdf|zip)$).*[^/])$",
      "destination": "/$1/",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}

